<?xml version='1.0' ?>

<launch>
  <!-- set to false if using real robots   -->
  <arg name="use_sim_time" default="false"/>
  <arg name="map_name" default="tp2-tp3-layout" description="Name of the rmf_demos map to simulate" />
  <!-- <arg name="server_uri" default="http://localhost:8000/_internal" description="Name of the rmf_demos map to simulate" /> -->
  <arg name="server_uri" default="http://10.7.11.9:8000/_internal" description="Name of the rmf_demos map to simulate" />
  <arg name="enable_experimental_lift_watchdog" default="true" description="experimental lift watchdog"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share amr-rmf)/launch/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share amr-rmf)/rviz_config/$(var map_name).rviz"/>
    <arg name="config_file" value="$(find-pkg-share amr-rmf)/maps/$(var map_name).building.yaml"/>
    <arg name="config_dynamic_charge_file" value="$(find-pkg-share amr_fleet_adapter)/charge_schedule.yaml"/>
    <arg name="server_uri" value="$(var server_uri)"/>
  </include>

  <!-- Experimental Lift watchdog service launch, default disable -->
  <group if="$(var enable_experimental_lift_watchdog)" scoped="false">
    <node pkg="rmf_fleet_adapter"
          exec="experimental_lift_watchdog"
          name="experimental_lift_watchdog"
          output="both" />
    <set_env name="EXPT_LIFT_WATCHDOG_SRV" value="experimental_lift_watchdog"/>
  </group>
  <group unless="$(var enable_experimental_lift_watchdog)" scoped="false">
    <set_env name="EXPT_LIFT_WATCHDOG_SRV" value=""/>
  </group>

  <!-- amr_tayrua fleet adapter -->
  <group>
    <include file="$(find-pkg-share amr_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="config_file" value="$(find-pkg-share amr_fleet_adapter)/config.yaml"/>
      <arg name="nav_graph_file" value="$(find-pkg-share amr-rmf)/maps/$(var map_name)/nav_graphs/0.yaml"/>
      <arg name="server_uri" value="$(var server_uri)"/>
      <arg name="experimental_lift_watchdog_service" value="$(env EXPT_LIFT_WATCHDOG_SRV)"/>
    </include>
  </group>

  <!-- Launch fleet conflicts handle -->
  <include file="$(find-pkg-share amr_fleet_adapter)/launch/fleet_conflicts_handle.launch.xml">
    <arg name="config_file" value="$(find-pkg-share amr_fleet_adapter)/config.yaml"/>
  </include>

  <include file="$(find-pkg-share amr-rmf)/launch/amrfleet_server.launch.py">
  </include>

  <!-- Charger server -->
  <!-- <include file="$(find-pkg-share amr-rmf)/launch/charger_server.launch.py">
  </include> -->

  <!-- Machine server -->
  <!-- <include file="$(find-pkg-share amr-rmf)/launch/machine_server.launch.py">
  </include> -->

  <!-- Ldm server -->
  <include file="$(find-pkg-share amr-rmf)/launch/ldm_server.launch.py">
  </include>

  <!-- Workcells adapter -->
  <include file="$(find-pkg-share amr_workcells_adapter)/launch/workcells_adapter.launch.xml">
  </include>

  <!-- Ldm adapter -->
  <include file="$(find-pkg-share ldm_rmf_adapter)/launch/ldm_rmf.launch.py">
  </include>
</launch>
