<?xml version='1.0' ?>

<launch>
  <!-- <arg name="failover_mode" default="false"/> -->
  <!-- set to false if using real robots -->
  <arg name="use_sim_time" default="false"/>
  <!-- <arg name="server_uri" default="http://localhost:8000/_internal" description="Name of the rmf_demos map to simulate" /> -->
  <arg name="server_uri" default="http://10.7.11.9:8000/_internal" description="Name of the rmf_demos map to simulate" />
  <!-- <arg name="server_uri" default="http://192.168.116.183:8000/_internal" description="Name of the rmf_demos map to simulate" /> -->
  <!-- <arg name="server_uri" default="" description="Name of the rmf_demos map to simulate" /> -->

  <!-- Common launch -->
  <include file="$(find-pkg-share amr-rmf)/launch/amr_rmf_schedule.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <!-- <arg name="failover_mode" value="$(var failover_mode)"/> -->
    <arg name="map_name" value="tp2-layout" />
    <!-- <arg name="map_name" value="tp2-layout-onelane" /> -->
    <arg name="server_uri" value="$(var server_uri)"/>
  </include>

  <!-- Fleet server -->
  <!-- <include file="$(find-pkg-share amr-rmf)/launch/turtlebot3_world_ff_server.launch.xml">
  </include> -->
  <include file="$(find-pkg-share amr-rmf)/launch/amr_ff_server.launch.xml">
  </include>

  <!-- Workcells adapter -->
  <include file="$(find-pkg-share amr_workcells_adapter)/launch/workcells_adapter.launch.xml">
  </include>

</launch>
