<?xml version='1.0' ?>

<launch>
  <arg name="config_file" default="$(find-pkg-share amr_tasks)/config.yaml" description="The config file that provides important parameters for setting up the adapter"/>
  <arg name="nav_graph_file"  default="$(find-pkg-share amr-rmf)/maps/tp2-tp3-layout/nav_graphs/0.yaml" description="The graph that this workcell should use for config"/>
  <arg name="output" default="screen"/>

  <!-- Autotask manager -->
  <node pkg="amr_tasks"
        exec="autotask_manager"
        args="-c $(var config_file) -n $(var nav_graph_file)"
        output="$(var output)">
  </node>

  <!-- Dispatch Delivery -->
  <node pkg="amr_tasks"
        exec="dispatch_delivery_task"
        output="$(var output)">
  </node>

</launch>
